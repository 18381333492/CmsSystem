
@using Web.Models;
@model TG_Templet
<!--添加/编辑模板-->
<style>
textarea {
        width: 750px;
        background-color: #373737;
        height: 480px;
        padding-top: 10px;
        padding-right: 10px;
        padding-left: 10px;
        padding-bottom: 10px;
        overflow: auto;
        color: white;
        font-size: 16px;
    }
</style>
<script src="~/Content/auto-line-number.js"></script>
<form id="dataForm">
    <input type="hidden" name="ID" value="@Model.ID" />
    <input type="hidden" name="dInsertTime" value="@Model.dInsertTime" />
    <div style="padding-left:5px;">
        <p> 
            <label>模板名称：</label><input class="easyui-textbox" name="sTempletName" data-options="required:true" value="@Model.sTempletName">
            <label>模板标识：</label><input class="easyui-textbox" name="sTempletEnName" data-options="required:true" value="@Model.sTempletEnName">
        </p>
        <p> <label>生成路径：</label><input class="easyui-textbox" name="sTempletUrl" style="width:200px" data-options="required:true" readonly="readonly" value="@Model.sTempletUrl"></p>
        <p>
            <textarea id="text" name="sTempletContent">@Html.Raw(Model.sTempletContent)</textarea>
        </p>
    </div>
</form>
<script type="text/javascript">
    $("#text").setTextareaCount({
        width: "30px",
        bgColor: "#000",
        color: "#FFF",
        display: "inline-block"
    });
</script>

