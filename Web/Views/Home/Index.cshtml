
@{
    ViewBag.Title = "台哥CMS系统";
}
<style>
    .panel-header{
        padding-top:8px;
        padding-bottom:8px;
    }
</style>
<div id="layout" class="easyui-layout" data-options="fit:true">
    <!--header-->
    <div data-options="region:'north',border:false" style="height:70px;"></div>

    <!--Menu-->
    <div data-options="region:'west',title:'菜单栏目',split:true" style="width:230px;">
        <ul id="tree" class="easyui-tree" data-options="animate:true,lines:true" 
            style="width:180px;margin:0 auto;margin-top:10px">
            <li>
                <span>菜单栏目</span>
                <ul>
                    <li>
                        <span><a data-url="">网站设置</a></span>
                    </li>
                    <li>
                        <span><a data-url="/Templet/Index">模板管理</a></span>
                    </li>
                    <li>
                        <span><a data-url="">栏目管理</a></span>
                    </li>
                    <li>
                        <span><a data-url="">生成页面</a></span>
                    </li>
                </ul>
            </li>
            <li>
                <span>File21</span>
            </li>
        </ul>
    </div>

    <!--Center-->
    <div data-options="region:'center',border:false">
        <div id="tabs" class="easyui-tabs" data-options="fit:true,tabHeight:31">
            <div title="首页" style="padding:10px;">
                欢迎来到台哥CMS系统
            </div>
        </div>
    </div>
    <!--footer-->
    <div data-options="region:'south'" style="height:30px;"></div>
</div>  
<script type="text/javascript">
    $('#tree').tree({
        onClick: function (node) {
            var menu = $(node.target).find('a');
            if (menu.length == 1) {
                var title = menu.text();
                var url = menu.attr("data-url");
                if ($('#tabs').tabs("getTab", title)) {
                    $('#tabs').tabs("select", title);
                }
                else {
                    $('#tabs').tabs('add', {
                        title: title,
                        content: '<iframe scrolling="auto" frameborder="0"  src="' + url + '" width="100%" height="100%" style="display:-webkit-box"></iframe>',
                        closable: true,
                        tools: [{
                            iconCls: 'icon-mini-refresh',
                            handler: function () {
                                alert('refresh');
                            }
                        }]

                    });
                }
            }
        }
    });
</script>