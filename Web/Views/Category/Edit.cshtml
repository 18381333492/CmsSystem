
<!--编辑栏目-->
@using Web.Models;
@model TG_Category

<form id="dataForm">
    <input type="hidden" name="ID" value="@Model.ID" />
    <div style="padding-left:15px;">
        <p>
            <label>所属栏目：</label>
            <input class="easyui-combotree" name="CategoryId" value="@Model.CategoryId" data-options="url:'/Category/CategoryComtreeData',required:true,panelHeight:'auto'">
            <label>是否为跳转的栏目：</label>
            <input type="checkbox" name="bIsRedirect" value="true" class="bIsRedirect" />
            <label>跳转链接：</label>
            <input class="easyui-textbox" type="text" name="sRedirectUrl" value="@Model.sRedirectUrl" />
        </p>
        <p>
            <label>栏目名称：</label>
            <input class="easyui-textbox" name="sName" data-options="required:true" value="@Model.sName">
            <label>是否显示在导航栏：</label>
            <input type="checkbox" name="bIsShowNav" class="bIsShowNav" value="true" />
        </p>
        <p>
            <label>栏目标识：</label>
            <input class="easyui-textbox" name="sEnName" data-options="required:true" value="@Model.sEnName">
            <label>是否为内容的栏目：</label>
            <input type="checkbox" class="bIsContentCategory" name="bIsContentCategory" value="true" />
        </p>
        <p>
            <label>排序编号：</label>
            <input class="easyui-numberspinner" name="iOrder" required="required" value="@Model.iOrder"
                   missingmessage="请输入排序编号." data-options="min:0,max:100,editable:true">
            <label>栏目英文：</label>
            <input class="easyui-textbox" name="sEnNick" value="@Model.sEnNick">
        </p>
        <p>
            <label>栏目模板：</label>
            <input name="iTemplateId" class="easyui-combobox" value="@Model.iTemplateId" data-options="url:'/Templet/comboxData',valueField:'ID',
                        textField:'sTempletName',editable:false,height:25,width:173">
            <label>栏目下文章模板：</label>
            <input name="iArticleTemplateId" class="easyui-combobox" value="@Model.iArticleTemplateId" data-options="url:'/Templet/comboxData',valueField:'ID',
                         textField:'sTempletName',editable:false,height:25,width:173">
        </p>
        <p>
            <label>栏目描述：</label>
            <input class="easyui-textbox easyui-validatebox" type="text" name="sDescription" value="@Model.sDescription" data-options="multiline:true,height:120,width:300" />
            <label>栏目关键字：</label>
            <input class="easyui-textbox easyui-validatebox" type="text" name="sKeyWord" value="@Model.sKeyWord" data-options="multiline:true,height:120,width:300" />
        </p>
        <p>
            <label>导图尺寸：</label>
            <input class="easyui-textbox" type="text" name="sPictureSize" value="@Model.sPictureSize" />(建议尺寸)
        </p>
        <p>
            <label style="vertical-align:top;display:block;float:left">栏目导图：</label>
            <div id="sPictureUrl"></div>
            <input type="hidden" name="sPictureUrl" value="@Model.sPictureUrl" />
        </p>
        <p>
            <label style="vertical-align:top;display:block;float:left">栏目内容：</label>
            <textarea id="sContent" name="sContent" style="width:750px;height:400px;">@Model.sContent</textarea>
        </p>
    </div>
</form>
<script type="text/javascript">
    $('.bIsShowNav,.bIsRedirect,.bIsContentCategory').iCheck({
        labelHover: false,
        cursor: true,
        checkboxClass: 'icheckbox_square-blue',
        radioClass: 'iradio_square-blue',
        increaseArea: '20%'
    });
    var pciture = new dpictures();
    pciture.create("sPictureUrl");

    var bIsRedirect = '@Model.bIsRedirect'=="True"?true:false;
    var bIsShowNav = '@Model.bIsShowNav'=="True"?true:false;
    var bIsContentCategory ='@Model.bIsContentCategory'=="True"?true:false;

    if(bIsRedirect)  $('.bIsRedirect').iCheck('check');
    if(bIsShowNav)  $('.bIsShowNav').iCheck('check');
    if(bIsContentCategory)  $('.bIsContentCategory').iCheck('check');


</script>